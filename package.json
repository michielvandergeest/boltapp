{
  "name": "boltapp",
  "version": "0.0.1",
  "description": "Bolt Test App",
  "main": "index.js",
  "scripts": {
    "build": "rollup -c",
    "watch": "rollup -cw",
    "serve": "instant -p 8081 ./",
    "dev": "concurrently \"npm:watch\" \"npm:serve\"",
    "start": "concurrently \"npm:build\" \"npm:serve\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "bolt": "github:michielvandergeest/bolt"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/preset-env": "^7.6.2",
    "babel-eslint": "^10.0.3",
    "chokidar": "^3.1.0",
    "concurrently": "^4.1.2",
    "eslint": "^6.5.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-prettier": "^3.1.1",
    "husky": "^3.0.8",
    "instant-server": "^2.0.0",
    "lint-staged": "^9.4.1",
    "prettier": "^1.18.2",
    "rollup": "^1.21.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-uglify": "^6.0.3"
  }
}
